<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Revenue -->
    <div class="bg-[#1A1F35] border border-gray-800 rounded-xl p-6 lg:col-span-2">
      <h3 class="text-lg font-semibold text-white mb-4">Revenue Overview</h3>
      <div class="relative h-[280px]">
        <canvas id="revenueChart"></canvas>
      </div>
    </div>
  
    <!-- Campaign Split -->
    <div class="bg-[#1A1F35] border border-gray-800 rounded-xl p-6">
      <h3 class="text-lg font-semibold text-white mb-4">Campaign Split</h3>
      <div class="relative h-[280px]">
        <canvas id="campaignChart"></canvas>
      </div>
    </div>
  
    <!-- Performance -->
    <div class="bg-[#1A1F35] border border-gray-800 rounded-xl p-6 lg:col-span-3">
      <h3 class="text-lg font-semibold text-white mb-4">Performance Metrics</h3>
      <div class="relative h-[280px]">
        <canvas id="performanceChart"></canvas>
      </div>
    </div>
  </div>
  
  <script type="module">
    import Chart from "chart.js/auto";
  
    const revenueCtx = document.getElementById("revenueChart");
    const campaignCtx = document.getElementById("campaignChart");
    const performanceCtx = document.getElementById("performanceChart");
  
    if (revenueCtx) {
      new Chart(revenueCtx, {
        type: "line",
        data: {
          labels: ["Mon", "Tue", "Wed", "Thu", "Fri", "Sat", "Sun"],
          datasets: [{
            label: "Revenue",
            data: [12, 19, 14, 22, 30, 25, 40],
            borderColor: "#6366f1",
            backgroundColor: "rgba(99,102,241,0.2)",
            tension: 0.4,
            fill: true
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: { legend: { display: false } },
          scales: {
            x: { ticks: { color: "#9ca3af" } },
            y: { ticks: { color: "#9ca3af" } }
          }
        }
      });
    }
  
    if (campaignCtx) {
      new Chart(campaignCtx, {
        type: "doughnut",
        data: {
          labels: ["Facebook", "Google", "Instagram"],
          datasets: [{
            data: [45, 35, 20],
            backgroundColor: ["#6366f1", "#22c55e", "#f59e0b"]
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: { legend: { labels: { color: "#e5e7eb" } } }
        }
      });
    }
  
    if (performanceCtx) {
      new Chart(performanceCtx, {
        type: "bar",
        data: {
          labels: ["Week 1", "Week 2", "Week 3", "Week 4"],
          datasets: [{
            label: "CTR %",
            data: [2.8, 3.1, 3.4, 3.9],
            backgroundColor: "#6366f1"
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: { legend: { display: false } },
          scales: {
            x: { ticks: { color: "#9ca3af" } },
            y: { ticks: { color: "#9ca3af" } }
          }
        }
      });
    }
  </script>
  