---
const { title, value, change, icon } = Astro.props;
---
<div class="rounded-2xl bg-[#11162a] border border-white/5 p-6 shadow-lg hover:border-indigo-500/40 transition">
  <div class="flex items-center justify-between mb-3">
    <p class="text-sm text-gray-400">{title}</p>
    <div class="w-10 h-10 bg-indigo-500/20 rounded-lg flex items-center justify-center text-xl">
      {icon}
    </div>
  </div>

  <p class="text-3xl font-bold text-white">{value}</p>
  <p class="text-sm text-emerald-400 mt-1">{change}</p>
</div>
